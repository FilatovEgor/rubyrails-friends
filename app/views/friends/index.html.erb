<% if user_signed_in? %>


	<table class="table table-dark table-striped table-bordered table-hover">
	<thead>
		<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Phone</th>
		<th>Twitter</th>
		<th> </th>
		</tr>
	</thead>

	<tbody>
		<% @friends.each do |friend| %>
		<% if friend.user == current_user %>
		<tr>
			<td>
				<%= link_to friend.first_name + ' ' + friend.last_name, friend  %>
			</td>
			<td><%= friend.email %></td>
			<td><%= friend.phone %></td>
			<td><%= friend.twitter %></td>
			<td>
			<div class="btn-group d-flex" aria-label="Basic mixed styles example">




			<%= link_to 'Delete', friend, class:"btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>

			</div>
			</td>
		</tr>
		<% end %>
		<% end %>
	</tbody>
	</table>

	<br>

	<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>
<% else %>
	<h1>Hello world!</h1>
	This is the first Rails
<% end %>
